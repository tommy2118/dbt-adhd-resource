{
  "name": "dbt-adhd-resource",
  "version": "1.0.0",
  "description": "A resource for DBT skills and ADHD management",
  "scripts": {
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "serve": "npx live-server --port=3000 --host=0.0.0.0 --entry-file=index.html",
    "serve:http": "npx http-server -p 3000 -c-1",
    "dev": "npx concurrently \"npm run watch:css\" \"npm run serve\"",
    "dev:http": "npx concurrently \"npm run watch:css\" \"npm run serve:http\"",
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify"
  },
  "keywords": ["DBT", "mental health", "wellness", "therapy"],
  "author": "Tommy A. Caruso",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.0",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  }
}
